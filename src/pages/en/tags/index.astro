---
import { SITE_TITLE, SITE_DESCRIPTION } from '@consts';
import GeneralLayout from '@layouts/GeneralLayout.astro';
import { getCollection } from 'astro:content';
import Tag from '@components/Tag.astro'

const tags: string[] = Array.from(new Set((await getCollection('blog')).filter((post) => !post.data.isDraft && post.data.language == 'en').reduce((cur, post) => cur.concat(post.data.tags), [] as string[])))
---
<GeneralLayout title={SITE_TITLE} description={SITE_DESCRIPTION} >
	<main>
		<section>
			<ul class="w-full flex flex-wrap gap-2">
				{
					tags.map((tag, i) => (
						<li class="text-center">
							<Tag colorIndex={i%11} name={tag} />
						</li>
					))
				}
			</ul>
		</section>
	</main>
</GeneralLayout>
