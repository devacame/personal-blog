		atRef: 'https://example.com',
		stack: 'Skills',
		about: 'About Me',
		aboutText: '',
		follow: 'Follow Me',
		visit: (page: string) => `Visit ${page}`,
	},
	ko: {
		title: SITE_TITLE + '에 대하여',
		description: SITE_TITLE + ' 소개',
