---
interface Props {
	date: Date
	locale: 'en' | 'ko'
	className?: string
}

const { date, locale, className = '' } = Astro.props
---

<time datetime={date.toISOString()} class={className}>
	{
		date.toLocaleDateString(locale, {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
